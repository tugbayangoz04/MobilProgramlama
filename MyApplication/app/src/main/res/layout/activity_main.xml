<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/lavenderLight">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textDark"
        android:layout_marginBottom="24dp" />

    <!-- Memory Game -->
    <androidx.cardview.widget.CardView
        android:id="@+id/memoryGameCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="6dp"
        card_view:cardBackgroundColor="@color/pastelBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/memory_game"
                android:contentDescription="Memory Game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Game"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mole Game -->
    <androidx.cardview.widget.CardView
        android:id="@+id/moleGameCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="6dp"
        card_view:cardBackgroundColor="@color/pastelBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mole_game"
                android:contentDescription="Mole Game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mole Game"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Flappy Bird -->
    <androidx.cardview.widget.CardView
        android:id="@+id/flappyBirdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="6dp"
        card_view:cardBackgroundColor="@color/pastelBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/flappy_bird"
                android:contentDescription="Flappy Bird" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flappy Bird"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>
